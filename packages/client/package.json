{
  "name": "@graffle/client",
  "version": "0.1.0",
  "description": "GraphQL client for JavaScript with type safety and extensibility",
  "type": "module",
  "exports": {
    ".": "./build/index.js",
    "./utilities-for-generated": "./build/utilities-for-generated.js",
    "./gql": "./build/static/gql.js"
  },
  "files": ["build", "src"],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build:emit": "tsc --build tsconfig.build.json --noCheck",
    "build:clean": "tsc --build tsconfig.build.json --clean && rm -rf build",
    "dev": "tsc --build tsconfig.build.json --watch --noCheck",
    "check:types": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest --run"
  },
  "dependencies": {
    "@graffle/core": "workspace:*",
    "@graffle/graphql": "workspace:*",
    "@wollybeard/kit": "^0.98.0",
    "type-fest": "^5.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graffle-js/graffle.git",
    "directory": "packages/client"
  },
  "keywords": ["graphql", "client", "type-safe"],
  "author": {
    "name": "Jason Kuhrt",
    "email": "jasonkuhrt@me.com",
    "url": "https://kuhrt.me"
  },
  "license": "MIT"
}
