{
  "name": "@graffle/generator",
  "version": "0.1.0",
  "description": "Code generator and CLI for Graffle GraphQL clients",
  "type": "module",
  "bin": "./build/cli/index.js",
  "exports": {
    ".": "./build/index.js",
    "./cli": "./build/cli/index.js",
    "./helpers/standard-scalar-types": "./build/helpers/standard-scalar-types.js"
  },
  "files": ["build", "src"],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "postbuild": "chmod +x ./build/cli/index.js",
    "build:emit": "tsc --build tsconfig.build.json --noCheck",
    "build:clean": "tsc --build tsconfig.build.json --clean && rm -rf build",
    "dev": "tsc --build tsconfig.build.json --watch --noCheck",
    "check:types": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest --run"
  },
  "dependencies": {
    "@graffle/core": "workspace:*",
    "@graffle/graphql": "workspace:*",
    "@molt/command": "^0.9.0",
    "@wollybeard/kit": "^0.98.0",
    "ts-morph": "^27.0.2"
  },
  "peerDependencies": {
    "@dprint/formatter": "^0.4.0",
    "@dprint/typescript": "^0.93.0",
    "prettier": "^3.3.3"
  },
  "peerDependenciesMeta": {
    "prettier": { "optional": true },
    "@dprint/formatter": { "optional": true },
    "@dprint/typescript": { "optional": true }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graffle-js/graffle.git",
    "directory": "packages/generator"
  },
  "keywords": ["graphql", "generator", "cli", "codegen"],
  "author": {
    "name": "Jason Kuhrt",
    "email": "jasonkuhrt@me.com",
    "url": "https://kuhrt.me"
  },
  "license": "MIT"
}
