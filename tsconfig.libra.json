// @libra
{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node-lts/tsconfig.json"
  ],
  "compilerOptions": {
    // Package
    "module": "nodenext",
    "moduleResolution": "nodenext",

    // Output
    "verbatimModuleSyntax": true,

    // DX
    "moduleDetection": "force",
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo",
    "noErrorTruncation": true,
    "incremental": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "#*": ["./src/*"],
      "#lib/anyware": ["./src/lib/anyware/$.ts"],
      "#lib/config-manager": ["./src/lib/config-manager/$.ts"],
      "#lib/errors": ["./src/lib/errors/$.ts"],
      "#lib/grafaid": ["./src/lib/grafaid/$.ts"],
      "#lib/md-jsdoc": ["./src/lib/md-jsdoc/$.ts"],
      "#lib/tex": ["./src/lib/tex/$.ts"],
      "#lib/type-function": ["./src/lib/type-function/$.ts"]
    },

    // DX covered by ESLint:
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // DX for Downstream
    "isolatedModules": true, // performance
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["build", "eslint.config.js"]
}
