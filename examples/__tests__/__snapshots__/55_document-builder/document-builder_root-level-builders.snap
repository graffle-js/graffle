---------------------------------------- SHOW ----------------------------------------
query ($name: String!, $name_2: String!) {
  pokemonByName(name: $name) {
    name
    type
    attack
  }
  trainerByName(name: $name_2) {
    name
    pokemon {
      name
    }
  }
  pokemons {
    name
  }
}
