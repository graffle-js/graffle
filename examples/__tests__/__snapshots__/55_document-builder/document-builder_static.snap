mutation ($name: String! = "Pikachu", $attack: Int, $defense: Int, $hp: Int, $type: PokemonType!) {
  addPokemon(
    name: $name
    attack: $attack
    defense: $defense
    hp: $hp
    type: $type
  ) {
    name
    type
  }
}
---------------------------------------- SHOW ----------------------------------------
query allPokemons {
  pokemons {
    name
    hp
  }
}

query specificPokemon($pokemonName: String!) {
  pokemonByName(name: $pokemonName) {
    name
    type
    hp
  }
}
